<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"/>

        <Button
            android:text="9"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:text="4"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="5"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="6"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:text="1"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="2"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="3"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#5C6BC0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="I"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#123A80"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:text="@string/flechaOtroLado"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#123A80"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="I"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#123A80"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="@string/flecha"
            android:textSize="30dp"
            app:cornerRadius="25dp"
            android:backgroundTint="#123A80"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>